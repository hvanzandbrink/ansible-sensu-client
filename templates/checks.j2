{
  "checks": {
{% if texts is defined %}
{% for website in websites %}
    "{{ website.name }}": {
      "command": "/etc/sensu/plugins/check-http.rb -u {{ website.url }} -q '{{ website.keyword }}'",
      "standalone": true,
      "interval": 60,
      "refresh": 60      
    },
{% endfor %}
{% endif %}
{% for check_or_metric in checks_and_metrics %}
    "{{ check_or_metric }}": {
      "type": "{{ {{ check_or_metric }} | regex_replace('^(.*)-.*', '\\1') }}",
    {% if {{ {{ check_or_metric }} | regex_replace('^(.*)-.*', '\\1') }} is 'metric' %}
      "handlers": ["relay"],
    {% endif %}
      "command": "{{ check_or_metric }}.rb",
      "standalone": true,
      "interval": 60,
      "refresh": 60
    }
{% if not loop.last %}
,
{% endif %}
{% endfor %}
  }
}
