{
  "checks": {
{% if texts is defined %}
{% for website in websites %}
    "{{ website.name }}": {
      "command": "/etc/sensu/plugins/check-http.rb -u {{ website.url }} -q '{{ website.keyword }}'",
      "standalone": true,
      "interval": 60,
      "refresh": 60      
    },
{% endfor %}
{% endif %}
{% for common_check in common_checks %}
    "{{ common_check }}": {
      "command": "{{ sensu_plugins_dir }}/check-{{ common_check }}.rb",
      "standalone": true,
      "interval": 60,
      "refresh": 60
    }
{% if not loop.last %}
,
{% endif %}
{% endfor %}
  }
}
