{
  "checks": {
{% if texts is defined %}
{% for website in websites %}
    "{{ website.name }}": {
      "command": "/etc/sensu/plugins/check-http.rb -u {{ website.url }} -q '{{ website.keyword }}'",
      "standalone": true,
      "interval": 60,
      "refresh": 60      
    },
{% endfor %}
{% endif %}
    "cpu": {
      "command": "{{ sensu_plugins_dir }}/check-cpu.rb",
      "standalone": true,
      "interval": 60,
      "refresh": 60
    }
  }
}
