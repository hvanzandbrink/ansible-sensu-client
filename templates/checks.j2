{
  "checks": {
{% if sensu_client_websites is defined %}
{% for website in sensu_client_websites %}
    "{{ website.name }}": {
      "command": "check-http.rb -u {{ website.url }} -q '{{ website.keyword }}'",
      "standalone": true,
      "interval": 60,
      "refresh": 60      
    },
{% endfor %}
{% endif %}
{% for check_metric in sensu_client_checks_metrics %}
    "{{ check_metric }}": {
{% if 'metrics' in check_metric %}
      "type": "metric",
      "handlers": ["relay"],
{% endif %}
{% if 'check' in check_metric %}
      "handlers": ["default", "mailer"],
{% endif %}
{% if check_metric == "check-disk-usage" %}
      "command": "{{ check_metric }}.rb -x cgroup -p /run/lxcfs",
{% else %}
      "command": "{{ check_metric }}.rb",
{% endif %}
      "standalone": true,
      "interval": 60,
      "refresh": 60
    }{%- if not loop.last -%},
{% endif %}
{% endfor %}

  }
}
